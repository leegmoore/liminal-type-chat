{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "AddMessageRequest",
  "description": "Request structure for adding a message to an existing conversation",
  "type": "object",
  "required": ["role", "content"],
  "properties": {
    "role": {
      "type": "string",
      "enum": ["user", "assistant", "system", "tool"],
      "description": "Role of the message sender"
    },
    "content": {
      "type": "string",
      "description": "Text content of the message"
    },
    "status": {
      "type": "string",
      "enum": ["pending", "streaming", "complete", "error", "interrupted"],
      "description": "Optional initial status of the message"
    },
    "metadata": {
      "type": "object",
      "description": "Optional key-value pairs of metadata",
      "additionalProperties": true
    }
  }
}
