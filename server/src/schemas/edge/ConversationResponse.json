{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ConversationResponse",
  "description": "Response structure for conversation data",
  "type": "object",
  "required": ["conversationId", "createdAt", "updatedAt", "messages"],
  "properties": {
    "conversationId": {
      "type": "string",
      "format": "uuid",
      "description": "Unique identifier for the conversation"
    },
    "title": {
      "type": ["string", "null"],
      "description": "Title of the conversation"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of conversation creation"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last conversation update"
    },
    "messages": {
      "type": "array",
      "description": "Array of messages in the conversation",
      "items": {
        "$ref": "./MessageResponse.json"
      }
    },
    "metadata": {
      "type": "object",
      "description": "Optional key-value pairs of metadata",
      "additionalProperties": true
    }
  }
}
